<%- include ../layouts/cabecera.ejs %>
<br>
<h1>Crear Libro</h1>
<form id="xmlForm" name="xmlForm" method="post" action="/libros" enctype="multipart/form-data">
    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input id="titulo" class="form-control" type="text" name="titulo" required>
    </div>
    <div class="form-group">
        <label for="portada">Imagen</label>
        <input id="portada" class="form-control-file" type="file" name="portada">
    </div>
    <div class="form-group">
        <label for="autor">Autor</label>
        <select id="autor" class="form-control" name="autor_id" required>
            <option value="" disabled="" selected="">Seleccione el autor</option>
            <% for( let i = 0; i < autores.length; i++ ) { %>
                <option value="<%=autores[i].id%>"><%=autores[i].nombres+' '+autores[i].apellidos%></option>
            <% } %>
        </select>
    </div>
    <a href="/libros" class="btn btn-light">Cancelar</a>
    <button class="btn btn-primary" type="submit">Crear</button>
</form>
