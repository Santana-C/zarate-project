<%- include ../layouts/cabecera.ejs %> 
<br>
<h1> Editar Libro <%=libro.titulo %> </h1>
<form method="post" action="../actualizar/" enctype="multipart/form-data">
    <div class="form-group">
        <input id="my-input" value="<%=libro.id %>" class="form-control" type="hidden" name="id" readonly>
    </div>
    <div class="form-group">
        <label for="my-input">Titulo</label>
        <input id="my-input" value="<%=libro.titulo %>" class="form-control" type="text" name="titulo" required>
    </div>
    <div class="form-group">
        <label for="my-select">Autor</label>
        <select id="my-select" class="form-control" name="autor_id" required>
            <option value="" disabled="" selected="">Seleccione el autor</option>
            <option value="<%=autorSel.id%>" selected><%=autorSel.nombres+' '+autorSel.apellidos%></option>
            <% for( let i = 0; i < autores.length; i++ ) { %>
                <option value="<%=autores[i].id%>"><%=autores[i].nombres+' '+autores[i].apellidos%></option>
            <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="my-input">Imagen</label>
        <img class="img-thumbnail" width="100" src="/images/<%=libro.portada %>" alt="">
        <input id="my-input" class="form-control-file" type="file" name="portada">
    </div>
    <br>
    <a href="/libros" class="btn btn-light">Cancelar</a>
    <button class="btn btn-primary" type="submit">Editar</button>
</form>
<br><br><br>
<form action="/libros/descargar/<%=libro.id %>" method="get">
    <button class="btn btn-info" type="submit">Descargar XML</button>
</form>
