<%- include ../layouts/cabecera.ejs %> 
<br>
<h1> Editar Autor <%=autor.nombres %> </h1>
<form method="post" action="../actualizar/">
    <div class="form-group">
        <input id="my-input" value="<%=autor.id %>" class="form-control" type="hidden" name="id" readonly>
    </div>
    <div class="form-group">
        <label for="my-input">Nombre(s)</label>
        <input id="my-input" value="<%=autor.nombres %>" class="form-control" type="text" name="nombres" required>
    </div>
    <div class="form-group">
        <label for="my-input">Apellidos</label>
        <input id="my-input" value="<%=autor.apellidos %>" class="form-control" type="text" name="apellidos" required>
    </div>
    <br>
    <a href="/libros" class="btn btn-light">Cancelar</a>
    <button class="btn btn-primary" type="submit">Editar</button>
</form>
